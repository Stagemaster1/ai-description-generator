# SolTecSol AI Description Generator Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# PayPal Configuration (REQUIRED)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=""
PAYPAL_STARTER_PLAN_ID=P-your_starter_plan_id_here
PAYPAL_PROFESSIONAL_PLAN_ID=P-your_professional_plan_id_here
PAYPAL_ENTERPRISE_PLAN_ID=P-your_enterprise_plan_id_here

# Firebase Configuration (REQUIRED - for user database)
# Admin SDK Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key-here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Client SDK Configuration (for frontend)
FIREBASE_API_KEY=your-firebase-web-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# PayPal Webhook Security (RECOMMENDED)
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Admin Panel Security (REQUIRED)
ADMIN_API_KEY=your-secure-admin-api-key-here

# Barcode Lookup Configuration (OPTIONAL)
BARCODE_LOOKUP_API_KEY=your_barcode_lookup_api_key_here

# Application Configuration (REQUIRED)
URL=https://your-site-domain.com

# Additional Configuration
NODE_ENV=production
